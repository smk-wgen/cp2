# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                 controllers.Application.index
#GET         /user/:id                         controllers.Application.findUser(id:Long)
GET          /addresses/:id                   controllers.Application.getUserAddresses(id:String)
GET         /usercommutes/:id                 controllers.Application.getUserCommutes(id:String)
GET         /commutematches/:id               controllers.Prototype.getCommuteMatches(id:Long)

POST        /user                             controllers.Application.createOrGetUser
POST        /address/:id                      controllers.Application.postAddress(id:String)
POST        /usercommute/:id                  controllers.Application.postCommute(id:String)

POST       /connect                           controllers.Application.connect


# Javascript routing
GET         /assets/javascripts/routes        controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)
